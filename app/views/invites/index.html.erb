<p id="notice"><%= notice %></p>

<h1>Invited Friends</h1>

<table class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
  <th>Is join</th>
      <th>Order</th>
      <th>User</th>
      <th>Status user</th>
      <th colspan="3"></th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.is_join %></td>
        <td><%= invite.order %></td>
        <td><%= invite.user %></td>
        <td><%= invite.status_user %></td>
        <td><%= link_to 'Show', invite %></td>
        <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
        <td><%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
         <% User.all.each do |user| %>
              <% if user.id == invite.user_id %>
                <td><%= user.username %></td>
              <% end %>
          <% end %>
        
          <% if invite.user_id == current_user.id%>
             <td><%= link_to 'delete', invite, method: :delete, data: { confirm: 'Are you sure?', :class => 'btn btn-danger' } %></td>
          <% end%>
      </tr>
    <% end %>
  </tbody>
</table>
<br>