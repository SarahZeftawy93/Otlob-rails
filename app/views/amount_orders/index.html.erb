<div class="col-md-7">
  <p id="notice"><%= notice %></p>
  <h1>Listing Amount Orders</h1>
<table class="table table-bordered table-condensed table-hover">
    <thead>
      <tr>
        <th>Person</th>
        <th>Item</th>
        <th>Amount</th>
        <th>Price</th>
        <th>Comment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @amount_orders.each do |amount_order| %>
        <tr>
          <td><%= amount_order.user %></td>
          <td><%= amount_order.item %></td>
          <td><%= amount_order.amount %></td>
          <td><%= amount_order.price %></td>
          <td><%= amount_order.comment %></td>
          <td><%= link_to "delete", amount_order_path(amount_order), method: 'delete',data: { confirm: 'Are you sure you want to delete?', :class => 'delete_order' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<table class="table table-bordered table-condensed table-hover col-md-6">
  <%= form_for AmountOrder.new do |f| %>
    <tr>
      <td>
        <%= f.label :item %><br>
        <%= f.text_field :item %>
      </td>
      <td>
        <%= f.label :comment %><br>
        <%= f.text_field :comment %>
      </td>
      <td>
        <%= f.label :price %><br>
        <%= f.text_field :price %>
      </td>
      <td>
        <%= f.label :amount %><br>
        <%= f.number_field :amount %>
      </td>
      <td>
        <%= f.label :order_id %><br>
        <%= f.text_field :order_id %>
      </td>

      <td>
        <%= f.label :user_id %><br>
        <%= f.text_field :user_id %>
      </td>
      <td>
         <%= f.submit :add%>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to "#{Invite.all.count} of fiends invited", invites_url %>  <br/>

<% x = 0 %>
<% Invite.all.each do |invite| %>
  <% if invite.is_joined == true %>
    <% x = x+1 %>
  <% end %>
<% end %>
<%= link_to "#{x} of fiends joined"  %>  
